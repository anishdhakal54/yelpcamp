<%include ../partials/header%>
<div class="container-fluid">
  <div class="card my-3 col-md-6 offset-2">
    <div class="card-header">
      <h3 class="text-center">Add New Campground</h3>
    </div>
    <div class="card-body">
      <form action="/campgrounds/<%=data._id%>?_method=PUT" method="post">
        <div class="form-group">
          <label>Name</label>
          <input
            type="text"
            name="campground[name]"
            class="form-control"
            value="<%=data.name%>"
          />
        </div>
        <div class="form-group">
          <label>Image</label>
          <input
            type="text"
            name="campground[image]"
            class="form-control"
            value="<%=data.image%>"
          />
        </div>
        <div class="form-group">
          <label>Price</label>
          <input
            type="text"
            name="campground[price]"
            class="form-control"
            value="<%=data.price%>"
          />
        </div>
        
        <div class="form-group">
          <label>Description</label>
          <textarea
            type="text"
            name="campground[description]"
            class="form-control"
          >
                <%=data.description%></textarea
          >
        </div>

        <button type="submit" class="btn btn-success">Edit Campground</button>
      </form>
    </div>
  </div>
</div>
<%include ../partials/footer%>
