<%include ../partials/header%>
<div class="container-fluid">
  <div class="card my-3 col-md-6 offset-2">
    <div class="card-header">
      <h3 class="text-center">Edit Comment</h3>
    </div>
    <div class="card-body">
      <form
        method="post"
        action="/campgrounds/<%=campground_id%>/comments/<%=data._id%>?_method=PUT"
      >
        <div class="form-group">
          <label>Comment:</label>
          <textarea type="text" name="comment[text]" class="form-control">
          <%= data.text %>
          </textarea>
        </div>
        <button type="submit" class="btn btn-success">Edit Comment</button>
        <a href="/campgrounds" class="btn btn-secondary">Go back</a>
      </form>
    </div>
  </div>
</div>
<%include ../partials/footer%>
