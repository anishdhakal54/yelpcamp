<%include ../partials/header%>
<div class="container-fluid">
  <div class="card my-3 col-md-6 offset-2">
    <div class="card-header">
      <h3 class="text-center">Add New Campground</h3>
    </div>
    <div class="card-body">
      <form method="post" action="/campgrounds/create">
        <div class="form-group">
          <label>Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Name"
          />
        </div>
        <div class="form-group">
          <label>Image</label>
          <input
            type="text"
            name="image"
            class="form-control"
            placeholder="image"
          />
        </div>
        
        <div class="form-group">
          <label>Price</label>
          <input
            type="number"
            name="price"
            class="form-control"
            placeholder="Price"
          />
        </div>
        
        <div class="form-group">
          <label>Description</label>
          <textarea
            type="text"
            name="description"
            class="form-control"
            placeholder="Description"
          ></textarea>
        </div>

        <button class="btn btn-success">Add Campground</button>
        <a href="/campgrounds/" +data._id class="btn btn-secondary">go back</a>
      </form>
    </div>
  </div>
</div>
<%include ../partials/footer%>
